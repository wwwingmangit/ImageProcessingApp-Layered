@model Models.ImageModel
@{
    ViewData["Title"] = "Image Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Original Image</h3>
    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.OriginalImage)" alt="Original Image" />
</div>

<div>
    <h3>Processed Image (Grayscale)</h3>
    @if (Model.ProcessedImage != null)

    {
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProcessedImage)" alt="Processed Image" />
    }

    else

    {
        <p>The image has not been processed yet.</p>
    }
</div>
